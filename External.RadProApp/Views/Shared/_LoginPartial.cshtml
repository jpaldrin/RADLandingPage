@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <div class="intro-info list-horizontal">
            <ul style="display: inline-flex;">
                <li style="z-index: 100;"><a class="btn-get-started scrollto" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        </div>
    }
}
else
{
    <div class="intro-info list-horizontal">
        <ul style="display: inline-flex;">
            <li style="z-index: 100;">
                @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn-services scrollto scrollto" })
            </li>
            <li style="z-index: 100;">
                @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn-services scrollto" })
            </li>
        </ul>
    </div>
}
